<% content_for :title, "当番編集" %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">当番編集</h5>
        </div>
        <div class="card-body">
          <%= form_with(model: @assignment, local: true) do |form| %>
            <% if @assignment.errors.any? %>
              <div class="alert alert-danger">
                <h4>エラーが発生しました:</h4>
                <ul class="mb-0">
                  <% @assignment.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :user_id, "当番者", class: "form-label" %>
              <%= form.select :user_id, options_from_collection_for_select(User.all, :id, :name, @assignment.user_id), { prompt: "選択してください" }, { class: "form-select" } %>
              <div class="form-text">
                当番者を変更できます。
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :assignment_date, "当番日", class: "form-label" %>
              <%= form.date_field :assignment_date, class: "form-control" %>
              <div class="form-text">
                当番日を変更できます。
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :assignment_method, "割り当て方法", class: "form-label" %>
              <%= form.select :assignment_method, options_for_select([
                ['公平（当番回数が少ない順）', 'custom']
              ], @assignment.assignment_method), {}, { class: "form-select" } %>
              <div class="form-text">
                割り当て方法を変更できます。
              </div>
            </div>

            <div class="row">
              <div class="col-12">
                <div class="alert alert-warning">
                  <h6>注意事項:</h6>
                  <ul class="mb-0">
                    <li>編集により当番者や日付が変更されます</li>
                    <li>同じ日に複数の当番を割り当てることはできません</li>
                    <li>完了済みの当番を編集する場合は十分注意してください</li>
                  </ul>
                </div>
              </div>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to "戻る", @assignment, class: "btn btn-secondary" %>
              <%= form.submit "更新", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 