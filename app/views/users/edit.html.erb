<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0"><%= @user.name %>の編集</h3>
        </div>
        <div class="card-body">
          <%= render 'form', user: @user %>
        </div>
        <div class="card-footer">
          <%= link_to "詳細を表示", @user, class: "btn btn-outline-primary" %>
          <%= link_to "一覧に戻る", users_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
